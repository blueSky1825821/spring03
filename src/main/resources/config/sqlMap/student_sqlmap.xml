<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
        PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
        "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="com.spring.tutorialspoint.www.sql.baidu.test01.impl.StudentDaoImpl">
    <!--namespace="com.spring.tutorialspoint.www.sql.impl.StudentDaoImpl"-->
    <!-- 为Person类设置一个别名 -->
    <typeAlias alias="student" type="com.spring.tutorialspoint.www.sql.baidu.test01.po.Student"/>

    <!-- 配置表和实体Bean之间的映射关系 -->
    <resultMap id="studentResultMap" class="com.spring.tutorialspoint.www.sql.baidu.test01.po.Student">
        <result column="id" property="id"></result>
        <result column="age" property="age"></result>
        <result column="sex" property="sex"></result>
        <result column="name" property="name"></result>
        <result column="phone" property="phone"></result>
        <result column="hobby" property="hobby"></result>
        <result column="pwd" property="password"></result>
    </resultMap>

    <sql id="baseColumn">
        id,
        age,
        sex,
        name,
        phone,
        hobby,
        pwd
    </sql>


    <insert id="insertStudent" parameterClass="student">
        insert
        into user_account
        (
        age,
        sex,
        name,
        phone,
        hobby,
        pwd
        )
        values (
        #age#,
        #sex#,
        #name#,
        #phone#,
        #hobby#,
        #password#
        )
        <selectKey resultClass="long" keyProperty="id">
            select LAST_INSERT_ID() as id
        </selectKey>
    </insert>

    <select id="queryStudentByName" parameterClass="string" resultMap="studentResultMap">
        <![CDATA[
            SELECT * FROM user_account WHERE NAME=#name#
        ]]>
    </select>

    <select id="queryStudentList" resultMap="studentResultMap">
        SELECT
        <include refid="baseColumn"/>
        FROM user_account
        <dynamic prepend="where">
            <isNotNull property="name" prepend=" and ">
                name = #name#
            </isNotNull>
            <isNotNull property="sex" prepend=" and ">
                sex = #sex#
            </isNotNull>
            <isNotNull property="phone" prepend=" and ">
                phone = #phone#
            </isNotNull>
        </dynamic>
    </select>



    <insert id="insertStudent1" parameterClass="student">
        <![CDATA[
            insert into student values(#sex#,#name#,#phone#,#hobby#,#password#);
        ]]>
    </insert>

    <!-- 查看特定用户 -->
    <select id="queryStudentById1" parameterClass="string" resultMap="studentResultMap">
        <![CDATA[
            SELECT * FROM student WHERE NAME=#name#
        ]]>
    </select>

    <!-- 查看所有的用户 -->
    <select id="queryAllStudents1" resultMap="studentResultMap">
        <![CDATA[
            SELECT * FROM STUDENT
        ]]>
    </select>
</sqlMap>